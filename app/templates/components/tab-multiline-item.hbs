<div class="ui middle aligned grid">
  <div class="ui four wide column">
    {{t (concat "settings.main." (camelize category))}}
  </div>
  <div class="ui twelve wide column">
    <div class="ui selection relaxed divided list">
      {{#each list as |item|}}
        {{multiline-item item=item deleteItem=(action "removeItem")}}
      {{/each}}
      <div class="ui item" role="button" onclick={{action "addMode"}}>
        {{#if editMode}}
          <div class="ui middle aligned grid">
            <div class="ui eight wide column">
              <div class="ui fluid input">
                {{input type=type value=value}}
              </div>
            </div>
            <div
              class="ui eight wide column"
              role="button"
              onMouseEnter={{action "mouseIn"}}
              onMouseLeave={{action "mouseOut"}}
              onclick={{action "addItem"}}
            >
              <div class="ui right floated">
                {{#if showSaveIcon}}
                  <i class="large olive save icon"></i>
                {{/if}}
                {{t "general.save"}}
              </div>
            </div>
          </div>
        {{else}}
          <i class="left floated plus teal icon"></i>{{t "general.addNew"}}
        {{/if}}
      </div>
    </div>
  </div>
</div>