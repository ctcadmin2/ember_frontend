{{#if this.showPagination}}
  <div class="ui pagination menu">
    {{#unless this.prevButton}}
      {{#unless this.firstButton}}
        {{#link-to this.route (query-params page=1) class="item"}}
          <i class="fast backward icon"></i>
        {{/link-to}}
      {{/unless}}
      {{#link-to this.route (query-params page=this.decrementPage) class="item"
      }}
        <i class="left arrow icon"></i>
      {{/link-to}}
    {{/unless}}
    {{#ui-dropdown
      class="fluid scrolling selection"
      selected=this.query.page.number
      onChange=(action (mut this.page)) as |execute mapper|
    }}
      <div class="default text">
        {{t "components.paginationList.pageNr"}}
      </div>
      <i class="dropdown icon"></i>
      <div class="menu">
        {{#each this.pageList as |page|}}
          <div class="item" data-value={{map-value mapper page}}>
            {{page}}
          </div>
        {{/each}}
      </div>
    {{/ui-dropdown}}
    {{#unless this.nextButton}}
      {{#link-to this.route (query-params page=this.incrementPage) class="item"
      }}
        <i class="right arrow icon"></i>
      {{/link-to}}
      {{#unless this.lastButton}}
        {{#link-to
          this.route
          (query-params page=this.meta.page-count)
          class="item"
        }}
          <i class="fast forward icon"></i>
        {{/link-to}}
      {{/unless}}
    {{/unless}}
  </div>
{{/if}}