<form class="ui fluid {{formClass}} form" oninput={{action "changeCif"}}>
  <div class="ui success message">{{t "components.find_company.success"}}</div>
  <div class="ui error message">{{t "components.find_company.error"}}</div>
  <div class="inline field">
    <div class="ui fluid labeled input grid">
      {{#if countries.dataFetched}}
        {{#ui-dropdown class="scrolling selection" selected=country onChange=(action (mut country)) showOnFocus=false}}
          <i class="dropdown icon"></i>
          <div class="default text"></div>
          <div class="menu">
            {{#each countries.list as |country|}}
              <div class="item" data-value={{country.value}}>
                {{#if (eq country.value "EL")}}
                  <i class="gr flag"></i>
                {{else}}
                  <i class="{{lowercase country.value}} flag"></i>
                {{/if}}
                {{country.name}}
              </div>
            {{/each}}
          </div>
        {{/ui-dropdown}}
      {{/if}}
      {{input type="text" value=cif placeholder="CIF"}}
      <button class="ui primary button" disabled={{searchDisabled}} {{action (perform findTask)}}>
        {{t "components.find_company.find_button"}}
      </button>
    </div>
  </div>
</form>