<div class="ui raised segment">
  <table class="ui table padded selectable striped celled attached">
    <caption class="ui huge header teal">Company list</caption>
    <thead>
      <tr>
        <th>Name</th>
        <th>CIF</th>
        <th>Contact</th>
        <th>Phone</th>
        <th>
          <div class="ui search">
            <div class="ui fluid icon input">
              {{input value=filter class="prompt" type="text" placeholder="Search"}}
              <i class="{{if filterEmpty 'search' 'remove link'}} icon" {{action 'clearFilter'}}></i>
            </div>
          </div>
        </th>
      </tr>
    </thead>
    <tfoot>
      <tr>
        <th colspan="5">
          <div class="ui items">
            <div class="item">
              <div class="middle aligned content">
                <div class="left floated">
                  <button {{action 'changeSize'}} class='ui teal button'> New company </button>
                </div>
                <div class="right floated">
                  <div class='ui right floated'>
                    {{#if showPagination}}
                      {{pagination-list meta=model.meta pageParam=page}}
                    {{/if}}
                  </div>
                </div>
              </div>
            </div>
          </div>
        </th>
      </tr>
    </tfoot>
    <tbody>
      {{#each model as |company|}}
         <tr>
           <td>{{company.name}}</td>
           <td>{{company.cif}}</td>
           <td>{{company.contact}}</td>
           <td>{{company.phone}}</td>
           <td>Actions</td>
         </tr>
      {{/each}}
    </tbody>
  </table>
</div>
