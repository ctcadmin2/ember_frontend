<div class="ui centered raised segment">
  <table class="ui table sortable padded selectable striped celled attached">
    <caption class="ui huge header teal">
      {{t "vehicles.title"}}
    </caption>
    <thead>
      <tr>
        <th>
          {{t "vehicles.vin"}}
        </th>
        <th>
          {{t "vehicles.registration"}}
        </th>
        <th></th>
      </tr>
    </thead>
    <tfoot>
      <tr>
        <th colspan="5">
          <div class="ui items">
            <div class="item">
              <div class="middle aligned content">
                <div class="left floated">
                  <LinkTo @route="vehicles.new" class="ui teal button">
                    {{t "vehicles.addNew"}}
                  </LinkTo>
                </div>
                <div class="right floated">
                  <div class="ui right floated">
                    <PaginationList @data={{this.vehicles}} @pageChange={{this.pageChange}} />
                  </div>
                </div>
              </div>
            </div>
          </div>
        </th>
      </tr>
    </tfoot>
    <tbody>
      {{#each this.vehicles as |vehicle|}}
        <tr>
          <td>
            {{vehicle.vin}}
          </td>
          <td>
            {{vehicle.registration}}
          </td>
          <td class="collapsing">
            <div class="ui fluid buttons">
              {{! TODO custom actions }}
              {{!table-actions model=vehicle deleteModel=(action "destroyVehicle" vehicle)}}
              <button class="ui olive button" type="button">
                {{t "vehicles.details"}}
              </button>
              <button class="ui olive button" type="button">
                {{t "vehicles.cNotes"}}
              </button>
              <button class="ui olive button" type="button">
                {{t "vehicles.events"}}
              </button>
              <LinkTo @route="vehicles.edit" @model={{vehicle}} class="ui teal button">
                {{t "general.edit"}}
              </LinkTo>
              <button class="ui red button" type="button" {{on "click" (fn this.destroyVehicle vehicle.id)}}>
                {{t "general.destroy"}}
              </button>
            </div>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
{{outlet}}