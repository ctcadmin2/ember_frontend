{{#ui-modal name="companyModal" class="companyModal small" closable=false}}
  <div class="header">
    {{t "companies.showing"}} {{company.name}}...
  </div>
  <div class="scrolling content">
    {{company-form countries=countries data=company inputDisabled=true}}
  </div>
  <div class="actions">
    <button class="ui positive button" {{action "okButton"}}>
      {{t "general.ok"}}
    </button>
  </div>
{{/ui-modal}}