<UiModal name="companyModal" class="companyModal small" @onApprove={{fn this.approveModal}} @closable="false">
  <div class="header">
    {{t "general.editing"}}
    {{this.company.name}}
    ...
  </div>
  <div class="scrolling content">
    <CompanyForm @data={{this.company}} @inputDisabled={{false}} />
  </div>
  <div class="actions">
    <button class="ui red deny button" type="button" {{on "click" this.cancelButton}}>
      {{t "general.cancel"}}
    </button>
    <div class="ui positive button">
      {{t "general.update"}}
    </div>
  </div>
</UiModal>