{{#ui-modal
  name="companyModal"
  class="companyModal small"
  onApprove=(action "approveModal")
  closable=false
}}
  <div class="header">
    {{t "general.editing"}}
    {{this.company.name}}
    ...
  </div>
  <div class="scrolling content">
    {{company-form data=this.company inputDisabled=false}}
  </div>
  <div class="actions">
    <button class="ui red deny button" {{action "cancelButton"}}>
      {{t "general.cancel"}}
    </button>
    <div class="ui positive button">
      {{t "general.update"}}
    </div>
  </div>
{{/ui-modal}}