{{#ui-modal
  name="vehicleModal"
  class="vehicleModal small"
  onApprove=(action "approveModal")
  closable=false
}}
  <div class="header">
    {{t "vehicles.new.title"}}
  </div>
  <div class="content">
    <div class="scrolling">
      {{vehicle-form vehicle=vehicle}}
    </div>
  </div>
  <div class="actions">
    <button class="ui red deny button" {{action "cancelButton"}}>
      {{t "general.cancel"}}
    </button>
    <div class="ui positive button">
      {{t "general.save"}}
    </div>
  </div>
{{/ui-modal}}