<UiModal name="vehicleModal" class="vehicleModal small" @onApprove={{fn this.approveModal}} @closable={{false}}>
  <div class="header">
    {{t "general.editing"}}
    {{this.vehicle.registration}}
    ...
  </div>
  <div class="scrolling content">
    <VehicleForm @vehicle={{this.vehicle}} />
  </div>
  <div class="actions">
    <button class="ui red deny button" type="button" {{on "click" this.cancelButton}}>
      {{t "general.cancel"}}
    </button>
    <div class="ui positive button">
      {{t "general.update"}}
    </div>
  </div>
</UiModal>