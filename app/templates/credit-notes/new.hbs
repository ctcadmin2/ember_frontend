{{#ui-modal
  name="creditNoteModal"
  class="creditNoteModal small"
  onApprove=(action "approveModal")
  closable=false
}}
  <div class="header">
    {{t "credit_notes.new.title"}}
  </div>
  <div class="content">
    <div class="scrolling">
      <form class="ui large fluid form">
        <div class="inline field">
          <div class="ui fluid labeled input grid">
            <label
              class="ui label four wide column"
              for={{concat elementId "-name"}}
            >
              {{t "settings.company.name"}}
            </label>
            {{input
              type="text"
              value=data.name
              autofocus=true
              id=(concat elementId "-name")
              disabled=inputDisabled
            }}
          </div>
        </div>
      </form>
    </div>
  </div>
  <div class="actions">
    <button class="ui red deny button" {{action "cancelButton"}}>
      {{t "general.cancel"}}
    </button>
    <div class="ui positive {{if saveDisabled "disabled"}} button">
      {{t "general.save"}}
    </div>
  </div>
{{/ui-modal}}